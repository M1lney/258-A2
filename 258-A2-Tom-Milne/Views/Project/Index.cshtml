@model IEnumerable<_258_A2_Tom_Milne.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutUser";
}
<head>
    <link rel="stylesheet" href="~/css/UserHomeStyle.css" />
</head>
<h1>Projects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <!--small modification to the index page to link the project title to the UserHome/ProjectDetails page-->
            <td><a asp-action="ProjectDetails" asp-controller="UserHome" asp-route-projectId="@item.Id">@item.Title</a></td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <!--Removed edit and details links as these are handled by the ProjectDetails page-->
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
